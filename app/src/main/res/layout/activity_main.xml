<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ActivityMain">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activityMain_widgets_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabMode="auto">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/main_page_tabChoice_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icons_notifications"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/main_page_tabChoice_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icons_feed"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/main_page_tabChoice_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icons_channels"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/main_page_tabChoice_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icons_settings"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/activityMain_widgets_pageViewer"
        android:layout_width="409dp"
        android:layout_height="681dp"
        app:layout_constraintBottom_toTopOf="@+id/activityMain_widgets_mainLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>